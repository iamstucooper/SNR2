<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
<h1>Policy Listing</h1>
</div>
</div>

<% if user_signed_in? %>
  <div class="footer-panel">
    <%= link_to 'New Policy', new_pin_path, class: "btn btn-primary btn-lg"%>
  </div>
  <br>
<% end %>

<div class="panel panel-default">
 <div class="panel-heading">
  <table>
    <thead>
      <tr>
        <th>Policy Identifier</th>
        <th>User Id</th>
        <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
          <% if pin.user == current_user %>
            <td><%= link_to 'Show', pin %></td>
            <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
            <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
<br>

